<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pilihan Masuk</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            width: 200px;
            text-align: center;
            cursor: pointer;
            transition: box-shadow 0.3s;
        }

        .card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div>
        <h2>Silakan Pilih Aksi</h2>

        <div class="card" onclick="chooseOption('web')">Halaman Web</div>
        <div class="card" onclick="chooseOption('jaringan')">Jaringan</div>

        <form id="pilihanForm" style="display: none;" action="/divisi" method="post">
            <input type="hidden" id="pilihanInput" name="divisi">
        </form>
    </div>

    <script>
        function chooseOption(option) {
            document.getElementById('pilihanInput').value = option;
            document.getElementById('pilihanForm').submit();
        }
    </script>
</body>

</html>
